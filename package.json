{
  "name": "lumberjack",
  "version": "1.0.1",
  "description": "Lumberjack - A log file viewer",
  "main": "dist-main/main.cjs",
  "type": "module",
  "scripts": {
    "prebuild": "esbuild src/main/parsers.ts src/utils/settings.ts --outdir=src --out-extension:.js=.cjs --format=cjs --platform=node && npm run build:main && npm run build:preload",
    "build:main": "esbuild src/main/main.ts --bundle --outfile=dist-main/main.cjs --platform=node --format=cjs --external:electron --external:electron-log/main && esbuild src/main/ipcHandlers.ts --bundle --outfile=dist-main/ipcHandlers.cjs --platform=node --format=cjs --external:electron --external:electron-log/main",
    "build:preload": "esbuild preload.ts --outfile=preload.cjs --bundle --platform=node --format=cjs --external:electron",
    "build:renderer": "vite build",
    "start": "npm run prebuild && npm run build:renderer && electron .",
    "dev": "npm run prebuild && concurrently -k -s first -n \"VITE,ELECTRON\" -c \"cyan,magenta\" \"cross-env NODE_ENV=development vite --open=false\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "test": "tsx ./scripts/smoke-parse.ts && tsx ./scripts/test-msg-filter.ts && node ./scripts/verify-mdc-flow.mjs && tsx ./scripts/test-elastic-indexer.ts && tsx ./scripts/test-log-data-store.ts && tsx ./scripts/test-tcp-socket-cleanup.ts && tsx ./scripts/test-http-poller-memory.ts && tsx ./scripts/test-robustness-features.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "icon:generate": "tsx ./scripts/make-icon.ts",
    "build:x64": "npm run prebuild && npm run build:renderer && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis --x64",
    "build:portable": "npm run prebuild && npm run build:renderer && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable",
    "build:portable:x64": "npm run prebuild && npm run build:renderer && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable --x64",
    "build:mac:dmg": "npm run prebuild && npm run build:renderer && cross-env ELECTRON_BUILDER_DISABLE_PUBLISH=true CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg --publish never"
  },
  "author": {
    "name": "Bohm, Moritz",
    "email": "bohm@hhla.de",
    "url": "https://www.hhla.de"
  },
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.0",
    "@preact/preset-vite": "^2.10.2",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.1.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@tanstack/react-virtual": "^3.13.12",
    "adm-zip": "^0.5.16",
    "electron-log": "^5.4.3",
    "moment": "^2.30.1",
    "preact": "^10.27.2"
  },
  "build": {
    "appId": "de.hhla.lumberjack",
    "productName": "Lumberjack",
    "directories": {
      "output": "release",
      "buildResources": "images"
    },
    "icon": "icon.ico",
    "files": [
      "dist/**/*",
      "dist-main/**/*",
      "!dist-main/**/*.js",
      "preload.cjs",
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.cjs",
      "index.html",
      "styles.css",
      "package.json",
      "images/**"
    ],
    "asar": true,
    "asarUnpack": [
      "images/**"
    ],
    "extraResources": [
      {
        "from": "images/icon.ico",
        "to": "images/icon.ico"
      }
    ],
    "electronVersion": "38.4.0",
    "electronDist": "node_modules/electron/dist",
    "artifactName": "Lumberjack-${version}-${arch}.${ext}",
    "compression": "store",
    "publish": [],
    "electronLanguages": [
      "de",
      "en-US"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        "nsis"
      ],
      "signAndEditExecutable": false,
      "forceCodeSigning": false,
      "signExts": [],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "createDesktopShortcut": true,
      "shortcutName": "Lumberjack"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "icon.icns",
      "identity": null
    }
  },
  "overrides": {
    "@electron/asar": "^4.0.1"
  }
}
